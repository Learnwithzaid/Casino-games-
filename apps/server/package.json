{
  "name": "@monorepo/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage --reporter=verbose",
    "test:unit": "vitest --run src/__tests__/unit --coverage",
    "test:integration": "vitest --run src/__tests__/integration --coverage",
    "test:e2e": "vitest --run src/__tests__/e2e",
    "test:security": "npm audit && snyk test",
    "test:load": "artillery run tests/load/load-test.yml",
    "test:load:report": "artillery run tests/load/load-test.yml --output tests/load/report.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:dbpush": "prisma db push",
    "prisma:seed": "tsx scripts/seed.ts",
    "postinstall": "prisma generate",
    "security:audit": "npm audit",
    "security:snyk": "snyk test",
    "security:update": "npm audit fix",
    "lint": "eslint src --ext .ts",
    "lint:security": "eslint --ext .ts --no-eslintrc --config .eslintrc.security.js src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["fastify", "prisma", "wallet", "payments"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/csrf-protection": "^6.5.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@monorepo/shared": "*",
    "@prisma/client": "^5.7.1",
    "@types/redis": "^4.0.11",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/cors": "^8.4.2",
    "artillery": "^2.0.13",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "jose": "^5.1.3",
    "pino": "^8.16.2",
    "pino-http": "^8.6.1",
    "rate-limiter-flexible": "^3.0.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prisma": "^5.7.1",
    "snyk": "^1.1293.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
