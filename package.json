{
  "name": "payments-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @monorepo/api dev",
    "dev:client": "yarn workspace @monorepo/client dev",
    "dev:server": "yarn workspace @monorepo/server dev",
    "build": "yarn workspaces run build",
    "build:client": "yarn workspace @monorepo/client build",
    "build:server": "yarn workspace @monorepo/server build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "yarn workspaces run test",
    "test:client": "yarn workspace @monorepo/client test",
    "test:server": "yarn workspace @monorepo/server test",
    "test:security": "yarn workspaces run test:security",
    "test:load": "yarn workspace @monorepo/server test:load",
    "test:coverage": "yarn workspaces run test:coverage",
    "security:audit": "yarn workspaces run security:audit",
    "security:snyk": "yarn workspaces run security:snyk",
    "lint:security": "yarn workspace @monorepo/server lint:security",
    "typecheck": "yarn workspaces run typecheck",
    
    # Development and deployment
    "dev": "npm run dev:client",
    "dev:client": "npm -w apps/client run dev",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    
    # Pre-commit hooks
    "prepare": "husky install",
    "lighthouse": "yarn workspace @monorepo/client lighthouse",
    
    # Security workflow
    "pre-commit": "npm run lint && npm run typecheck && npm run security:audit",
    "pre-push": "npm run test:security && npm run lint:security",
    
    # CI/CD
    "ci:security": "npm run security:audit && npm run test:security",
    "ci:load": "npm run test:load",
    "ci:full": "npm run lint && npm run typecheck && npm run test:coverage && npm run ci:security && npm run ci:load"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.0"
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
